{
    "compilerOptions": {
        "alwaysStrict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,

        "target": "ES6",

        "outDir": "./dist/",

        "module": "commonjs",

        "sourceMap": true,
        "inlineSources": true,

        "moduleResolution": "node",
        "jsx": "react"
    },

    "files": [
        "src/index.tsx"
    ]
}
